<div class="container text-dark">
    <div class="row text-center">
        <div class="col-12">
            <br>
            <h3>Welcome to the Good Burger, Home of the Good Burger.<br></h3>
            <br>
            <h1> Can I take your order?</h1>
            <br>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-center">
                Avaialable Burgers
            </h2>
            <hr>
            {{#each burgers}}
            {{#unless devoured}}
            <div class="row">
                <div class="col-8">
                    <p class="sortaBigFont">{{burger_name}} </p>
                </div>
                <div class="col-4">
                    <button class="btn btn-dark customFont devourBtn" id="{{id}}"> EAT</button>

                </div>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-lg-6">
            <h2 class="customFont text-center">Burgers Eaten</h2>
            <hr>
            {{#each burgers}}
            {{#if devoured}}
            <div class="row">
                <div class="col-12 text-center">
                    <p class="sortaBigFont">{{burger_name}} </p>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <div class="form-group">
                    <input type="text" class="form-control" name="addNewBurger" id="newBurger">
                    <button class="btn btn-dark customFont mt-2" id="submitNewBurger">Make Burger!</button>
                </div>
                </form>
            </div>
        </div>
    </div>